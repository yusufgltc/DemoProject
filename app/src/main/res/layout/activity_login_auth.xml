<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Auth.LoginAuth"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="50dp"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:textColor="#fff"
            android:text="EduShare"/>
        
        <TextView
            android:id="@+id/txtView_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque blandit, turpis suscipit dapibus mattis, lorem enim condimentum est, ac condimentum justo turpis eu nunc. "
            android:textSize="15sp"
            android:layout_marginTop="25dp"/>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_learn_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/button_style"
                android:text="Learn more"
                android:textColor="#fff" />

            <Button
                android:id="@+id/btn_join_us"
                android:layout_margin="10dp"
                android:textColor="#fff"
                android:background="@drawable/button_style2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Join us"/>
            </LinearLayout>


</LinearLayout>

    <LinearLayout
        android:id="@+id/l2"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:id="@+id/edtText_userEmail_login"
            android:drawableLeft="@drawable/ic_baseline_person_outline_24"
            android:drawablePadding="10dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="E-Mail"/>
        <EditText
            android:id="@+id/edtText_password_login"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:drawablePadding="10dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"/>

        <TextView
            android:id="@+id/txtView_forgot_password"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Forgot password?"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_signIn"
            android:layout_marginTop="40dp"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style"
            android:drawableRight="@drawable/ic_baseline_send_24"
            android:text="Sign In"
            android:textColor="#fff"/>

        <ProgressBar
            android:visibility="invisible"
            android:paddingTop="0dp"
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>
