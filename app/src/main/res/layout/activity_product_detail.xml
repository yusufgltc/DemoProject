<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:background="@color/cardview_dark_background"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_gravity="center"
        tools:context=".Activity.ProductDetail">
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="75dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/imageView_product_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/ic_launcher"
                tools:ignore="VectorDrawableCompat"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_product_title_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="Title"
                android:textSize="18dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txt_product_category_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="Category"
                android:textSize="15dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txt_product_date_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:textSize="12dp"
                android:text="Upload Date"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txt_product_quality_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:textSize="12dp"
                android:text="Quality"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txt_product_description_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="9dp"
                android:text="Description"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="end">
            <TextView
                android:id="@+id/txtView_userEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:text="shared by mail@mail.com" />
            <ImageView
                android:id="@+id/imageView_user"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:paddingEnd="10dp"
                android:src="@drawable/ic_baseline_person_outline_24"
                android:paddingRight="10dp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_share_product_detail"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:drawableLeft="@drawable/ic_baseline_messageblk_24"
        android:textColor="@android:color/white"
        android:background="@drawable/button_style3"
        android:text="Share Donate" />
</LinearLayout>


